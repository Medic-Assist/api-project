{
    "env": {
        "node": true, // Définit l'environnement Node.js
        "es2021": true // Active les fonctionnalités ECMAScript 2021
    },
    "extends": "eslint:recommended", // Utilise la configuration recommandée d'ESLint
    "parserOptions": {
        "ecmaVersion": 12, // Utilisation d'ECMAScript 2021 (ES12)
        "sourceType": "script" // Déclare que vous utilisez CommonJS (pas de modules ES6)
    },
    "rules": {
        // Ajoutez vos propres règles ici, ou laissez celles par défaut
        "no-unused-vars": "warn", // Avertit des variables inutilisées
        "no-console": "off" // Permet l'utilisation de console.log() pour déboguer
    }
}